<div class="postforming">
<div class="panel panel-default post-panel">
   <div class="panel-body row">
      <div class="col-sm-1">
         <img src="/icon.png" style="border:1px solid black;width:35px;height:35px;">
      </div>
      <div class="col-sm-11">
         <%= form_for(@newPost) do |f| %>
         <center>
            <div class="field">
               <%= f.text_field :content, autofocus: false, class: "form-control" %>
            </div>
            <div class="actions">
               <span style="float:right; margin-top:8px;"><%= f.submit "Add Post!", class: "btn btn-primary" %></span>
            </div>
         </center>
         <% end %>
      </div>
   </div>
</div>
</div>