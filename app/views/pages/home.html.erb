<div class="row">
   <div class="col-xs-3">
      <div class="panel panel-default">
         <div class="panel-body">
            <p>stats</p>
         </div>
      </div>
      <div class="panel panel-default">
         <div class="panel-body">
            <p>trends</p>
         </div>
      </div>
   </div>
   <div class="col-xs-6">
      <%= render '/components/post_form' %><br><br>
      <% for @p in @posts %>
      <div class="panel panel-default post-panel">
         <div class="panel-body row">
             <div class="col-sm-1">
              <img src="/icon.png" style="width:35px;height:35px;">
            </div>
            <div class="col-sm-11">
             <p class="post-titles"><a class="posted-user" href=""><%= User.find(@p.user_id).username %></a> - <%= @p.created_at.to_formatted_s(:short) %></p>
             <p class="post-content"><%= @p.content %></p>
            </div>
            
            <div class="col-sm-12">
              <p class="post-links">links</p>
            </div>
         </div>
      </div>
      <% end %>
   </div>
   <div class="col-xs-3">
      <div class="panel panel-default">
         <div class="panel-body">
            <p>about</p>
         </div>
      </div>
   </div>
</div>